<resources>

    <!-- Base application theme. -->
    <style name="Meatspace" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/Meatspace.ActionBar.Translucent</item>
        <item name="android:actionBarSize">@dimen/ab_height</item>
        <item name="android:actionBarItemBackground">@drawable/ab_button_bg_ms</item>
    </style>

    <style name="Meatspace.ActionBar.Translucent" parent="android:Widget.ActionBar">
        <item name="android:background">@color/ms_ab_bg</item>
        <item name="android:titleTextStyle">@style/Meatspace.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Meatspace.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ms_ab_text</item>
    </style>

    <style name="Meatspace.Container">
        <item name="android:paddingLeft">@dimen/horizontal_padding</item>
        <item name="android:paddingRight">@dimen/horizontal_padding</item>
        <item name="android:paddingTop">@dimen/vertical_padding</item>
        <item name="android:paddingBottom">@dimen/vertical_padding</item>
    </style>

    <style name="Meatspace.Container.Horizontal">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Meatspace.ContainerVertical">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Meatspace.TextAppearance"/>
    <style name="Meatspace.TextAppearance.StatusBar"/>
    <style name="Meatspace.TextAppearance.StatusBar.EventContent">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Meatspace.TextAppearance.StatusBar.EventContent.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Meatspace.TextAppearance.StatusBar.EventContent.Line2">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
